{
  "name": "Focus Pocus Extension",
  "version": "0.3",
  "description": "Magically changing the page to keep you focused!",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "http://*/*",
    "https://*/*"
  ],  
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'sha256-kGMIwtcSZ7ekfE2GdqtIypLrQ+j4455SKQMJtkfopJc='; object-src 'self'"
}